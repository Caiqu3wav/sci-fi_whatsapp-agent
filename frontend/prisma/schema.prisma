generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String?
  email       String   @unique
  password    String
  companyName String?  // Nome da empresa que ele vai cadastrar
  role        Role     @default(USER) // se no futuro quiser admin, user, etc
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relação
  clients     Client[] // Um user pode ter vários clientes
}

model Client {
  id          String   @id @default(cuid())
  userId      String
  name        String
  phoneNumber String   @unique // WhatsApp
  email       String?
  notes       String?  // Observações do atendimento
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
